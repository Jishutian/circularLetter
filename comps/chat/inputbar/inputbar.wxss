/* 定义两个通用的模板样式 无数据以及网络出错 */
.j-noData {
  position: fixed;
  top: 20%;
  text-align: center;
  left: 50%;
  transform: translateX(-50%);
}
.j-noData .j-noDataImg {
  width: 404rpx;
  height: 384rpx;
  margin-bottom: 20rpx;
}
/* 常用按钮设置 */
.j-btn {
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #242629;
  width: 656rpx;
  margin: 0 auto;
}



.room_bar {
	width: 100%;
	height: auto;
	border-top: 1px solid #CFCFCF;
	position: fixed;
	bottom: 0;
	right: 0;
	z-index: 1;
	background-color: #FFFFFF;
	transform: translateZ(1000px);
}

.other_func {
	width: 100%;
	height: 60rpx;
	display: flex;
}
.other_func_X{
	height: 128rpx;
}

.other_func image {
	width: 42rpx;
	height: 40rpx;
}

.open_emoji,
.send_image,
.open_camera,
.v-record {
	width: 48rpx;
	height: 48rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 48rpx;
}


.v-record .icon-record {
	width: 18rpx;
	height: 40rpx;
}
.v-record{
	margin-left: 48rpx;
}
.open_camera, .send_image{
	margin-left: 64rpx;
}

/* 底部操作区 */
.bottom{
  position: fixed;
  bottom:0;
  width:100%;
  background-color:#fff;
}
.bottom .bottomTop{
  border-top:2rpx solid #242629;
  height:102rpx;
  padding:0 16rpx;
}
.bottom .bottomTop .icon{
  width:60rpx;
  height:60rpx;
}
.bottom .bottomTop input{
  width:430rpx;
  padding:0 20rpx;
  height: 64rpx;
  border:2rpx solid #242629;
}
.bottom .bottomTop .record{
  width:474rpx;
  line-height: 64rpx;
  border:2rpx solid #242629;
  background-color:#ECECEC;
  text-align: center;
}
.bottom .bottomBottom{
  /* height: */
  padding:0 9rpx;
  display: flex;
  flex-wrap: wrap;
  border-top:0rpx solid #242629;
  height:0;
  transition:height 0.3s;
  overflow: hidden;
}
.bottom .bottomBottom.show{
  height:220rpx;
  border-width:2rpx;
}
.bottom .bottomBottom .item{
  margin:32rpx 35rpx;
  text-align: center;
  width:auto;
  position:static;
}
.bottom .bottomBottom .item .img{
  width:112rpx;
  height:112rpx;
}