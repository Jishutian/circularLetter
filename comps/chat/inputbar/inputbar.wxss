
/**app.wxss**/
/* 去除buttom样式 */
button {
  background-color: transparent;
  line-height: 1em;
  padding: 0;
  border: 0;
  margin: 0;
  border-radius: 0;
}
button::after {
  border: 0;
}
/* 全局样式定义 */

/* 修改全局view，navigator的盒子模型 */
view, navigator {
  box-sizing: border-box;
}
/* 定义flex布局 */
.j-flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.j-shrink {
  flex-shrink: 0;
}
.j-grow {
  flex-grow: 1;
}
/* 定义遮罩，绝对居中块 */
.j-mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9;
  overflow:hidden;
}
.j-center {
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 10;
  background-color: #fff;
  transform: translate(-50%, -50%);
}
/* 全局颜色 */
.j-color {
  background-color: #242629;
}
/* 背景图片 */
.j-bgImg {
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
}
/* 文字超出省略号 */
.j-textOne {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.j-textTwo {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.j-textThree {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
/* 全局颜色定义 */
.c999 {
  color: #999;
}
.cfff {
  color: #fff;
}
.c242629 {
  color: #242629;
}
.w6{font-weight:600}
/* 全局字体大小设置 */
